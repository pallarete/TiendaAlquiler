@model TiendaAlquiler.Models.Color

@{
    ViewData["Title"] = "Delete";
}
<h1>Esta seguro de borrar este color?</h1>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-4 detail-card">
            <h4 class="text-center">Color</h4>
            <hr />

            <!-- Tabla de detalles con columnas del mismo ancho -->
            <table class="table table-borderless text-center">
                <tr>
                    <th>Color:</th>
                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                </tr>
            </table>

            <!-- Formulario de eliminación y acciones -->
            <div class="d-flex justify-content-between mt-3">
                <form asp-action="Delete" class="w-100 d-flex justify-content-between">
                    <input type="hidden" asp-for="ColorId" />
                    <button type="submit" class="btn btn-danger w-50 me-2">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary w-50">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

