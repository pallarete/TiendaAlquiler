<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiendaAlquiler</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDg-RAkBxdrQNSJap_mqLOgWC9e1gyLNLU&callback=initMap" async defer>  </script>
    <script>
        function initMap() {
        // Ubicación: Ajusta la latitud y longitud a la ubicación deseada
        const location = { lat: 43.370947, lng: -8.395835 }; // Ejemplo: La Coruña

        // Crea el mapa centrado en la ubicación
        const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 18,
        center: location,
        });

        // Agrega un marcador en la ubicación
        const marker = new google.maps.Marker({
        position: location,
        map: map,
        title: "Lugar de recogida de coches",
        });
        }

    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const navbar = document.querySelector(".navbar");

            window.addEventListener("scroll", function () {
                if (window.scrollY > 100) { // Cambia el valor según cuándo quieres que se active
                    navbar.classList.add("scrolled");
                } else {
                    navbar.classList.remove("scrolled");
                }
            });
        });
    </script>
