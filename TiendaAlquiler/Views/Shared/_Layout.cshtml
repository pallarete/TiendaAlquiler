    <link rel="stylesheet" href="~/TiendaAlquiler.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TiendaAlquiler</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Menú de navegación">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- Alineación a la derecha con ms-auto -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">INICIO</a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Carrocerias" asp-action="Index">CARROCERÍAS</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Colors" asp-action="Index">COLORES</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Decadas" asp-action="Index">DECADAS</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Paises" asp-action="Index">PAÍS</a></li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Coches" asp-action="Index">COCHES</a>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Usuario" asp-action="Register">REGISTRO</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Usuario" asp-action="Login">LOGIN</a></li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a href="@Url.Action("Logout", "Usuario")" class="nav-link text-dark">LOG OUT</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* <button id="backToTop" class="back-to-top" title="Volver arriba">⬆</button> *@


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
    <footer class="border-top footer text-muted">
        &copy; 2024 - TiendaAlquiler - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
</body>
</html>
