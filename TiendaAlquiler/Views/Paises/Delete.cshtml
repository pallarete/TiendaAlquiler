@model TiendaAlquiler.Models.Pais

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Quiere borar este pais?</h3>
<div>
    <h4>Pais</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
