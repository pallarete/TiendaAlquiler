@model IEnumerable<TiendaAlquiler.Models.Pais>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Paises</h1>

<p>
    <a asp-action="Create">Crear un nuevo pais</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaisId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.PaisId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.PaisId">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
