@model TiendaAlquiler.Models.Carroceria

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4">¿Está seguro de eliminar esta carrocería?</h1>

<div class="container bg-white p-4 shadow rounded">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center mb-3">Carrocería</h4>
            <hr />

            <!-- Tabla de detalles centrada -->
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th class="text-end">Tipo:</th>
                        <td class="text-start">@Html.DisplayFor(model => model.Tipo)</td>
                    </tr>
                </tbody>
            </table>

            <!-- Botones de acción -->
            <div class="d-flex justify-content-center gap-3 mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CarroceriaId" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>
