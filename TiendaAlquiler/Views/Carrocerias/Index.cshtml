@model IEnumerable<TiendaAlquiler.Models.Carroceria>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center ">
    <h1>Listado de carrocerías</h1>
    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Create" class="btn btn-highlight">Crear una nueva carrocería</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
                <td class="text-end">
                    
                    <a asp-action="Edit" asp-route-id="@item.CarroceriaId" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.CarroceriaId" class="btn btn-secondary">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.CarroceriaId" class="btn btn-danger">Borrar Carrocería</a>

                </td>
            </tr>
        }
    </tbody>
</table>


