@model TiendaAlquiler.Models.Coche

@{
    ViewData["Title"] = "Create";
}

<h1>Crear un coche nuevo</h1>

<h4>Coche</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnioFabricacion" class="control-label"></label>
                <input asp-for="AnioFabricacion" class="form-control" type="number" min="1900" max="2100" />
                <span asp-validation-for="AnioFabricacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioAlquiler" class="control-label"></label>
                <input asp-for="PrecioAlquiler" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PrecioAlquiler" class="text-danger"></span>
            </div>
            @*  <div class="form-group form-check">
            <label class="form-check-label">
            <input class="form-check-input" asp-for="EstaAlquilado" /> @Html.DisplayNameFor(model => model.EstaAlquilado)
            </label>
            </div> *@
            <div class="form-group">
                <label asp-for="ColorId" class="control-label"></label>
                <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CarroceriaId" class="control-label"></label>
                <select asp-for="CarroceriaId" class="form-control" asp-items="ViewBag.CarroceriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DecadaId" class="control-label"></label>
                <select asp-for="DecadaId" class="form-control" asp-items="ViewBag.DecadaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaisId" class="control-label"></label>
                <select asp-for="PaisId" class="form-control" asp-items="ViewBag.PaisId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
