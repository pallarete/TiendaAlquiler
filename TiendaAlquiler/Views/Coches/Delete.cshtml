@model TiendaAlquiler.Models.Coche

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-container">
    <h1 class="page-title">Borrar coche</h1>

    <h3 class="confirmation-text">¿Está seguro de eliminar este coche?</h3>

    <div class="car-details">
        <h4 class="car-detail-title">Coche</h4>
        <hr />
        <dl class="row car-detail-list">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Marca)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Marca)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Modelo)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Modelo)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AnioFabricacion)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.AnioFabricacion)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PrecioAlquiler)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecioAlquiler)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EstaAlquilado)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.EstaAlquilado)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Carroceria)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Carroceria.Tipo)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Color)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Color.Nombre)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Decada)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Decada.DecadaId)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Pais)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Pais.Nombre)</dd>
        </dl>
    </div>

    <div class="form-actions">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CocheId" />
            <button type="submit" class="btn btn-danger">Borrar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
        </form>
    </div>
</div>
