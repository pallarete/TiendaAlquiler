@model TiendaAlquiler.Models.Decada

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Decada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnioInicio" class="control-label"></label>
                <select asp-for="AnioInicio" class="form-control">
                    <option value="" disabled selected>Seleccione un año</option>
                    @for (int year = 1900; year <= 2100; year += 10)
                    {
                        <option value="@year" placeholder="Pinche aqui">@year</option>
                    }
                </select>
                <span asp-validation-for="AnioInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
