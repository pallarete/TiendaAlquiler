@model IEnumerable<TiendaAlquiler.Models.Decada>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Décadas</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AnioInicio)</th>
            <th class="text-end">Acciones</th> <!-- Alineamos la cabecera de "Acciones" a la derecha -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AnioInicio)</td>
                <td class="text-end">
                    <!-- Alineamos las acciones a la derecha -->
                    <a asp-action="Edit" asp-route-id="@item.DecadaId" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.DecadaId" class="btn btn-secondary">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.DecadaId" class="btn btn-danger">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-4">
    <a asp-action="Create" class="btn btn-highlight">Crear nueva década</a>
</div>
