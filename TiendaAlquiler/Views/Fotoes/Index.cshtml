@model IEnumerable<TiendaAlquiler.Models.Foto>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de fotos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RutaAcceso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coche)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RutaAcceso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coche.Marca)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FotoId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FotoId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FotoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
